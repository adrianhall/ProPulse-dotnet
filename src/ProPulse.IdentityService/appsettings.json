{
  "ConnectionStrings": {
    "IdentityDatabase": "Server=(localdb)\\mssqllocaldb;Database=ProPulse.Identity;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Identity": {
    "Options": {
      "Password": {
        "RequireDigit": true,
        "RequireLowercase": true,
        "RequireNonAlphanumeric": true,
        "RequireUppercase": true,
        "RequiredLength": 8
      },
      "Lockout": {
        "DefaultLockoutTimeSpan": "00:15:00",
        "MaxFailedAccessAttempts": 5,
        "AllowedForNewUsers": true
      },
      "SignIn": {
        "RequireConfirmedAccount": true
      }
    },
    "Providers": {
      "Facebook": {
        "ClientId": "",
        "ClientSecret": ""
      },
      "Google": {
        "ClientId": "",
        "ClientSecret": ""
      },
      "MicrosoftAccount": {
        "ClientId": "",
        "ClientSecret": ""
      }
    }
  },
  "webOptimizer": {
    "enableCaching": false,
    "enableMemoryCache": false,
    "enableTagHelperBundling": false,
    "allowEmptyBundle": false
  }
}
